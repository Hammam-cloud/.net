@page
@model MyRazorApp.Pages.Orders.OrderListModel
@{
    ViewData["Title"] = "My Orders";
       Layout = "_Layout1";
}

<h2>My Orders</h2>

@if (Model.Orders.Count == 0)
{
    <p>No orders found.</p>
}
else
{
    <div class="order-list">
        @foreach (var order in Model.Orders)
        {
            <div class="order-card">
                <h3>@order.Book.Title</h3>
                <p><strong>Author:</strong> @order.Book.Author</p>
                <p><strong>Genre:</strong> @order.Book.Genre</p>
                <p><strong>Ordered on:</strong> @order.OrderDate.ToShortDateString()</p>
            </div>
        }
    </div>
}

<style>
    .order-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .order-card {
        border: 1px solid #ccc;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
    }
</style>
