@page "{id:int}"
@model MyRazorApp.Pages.Students.DeleteStudentModel
@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this student?</strong>
</div>

<div>
    <p><strong>Name:</strong> @Model.Student.FirstName @Model.Student.LastName</p>
    <p><strong>Email:</strong> @Model.Student.Email</p>
    <p><strong>Address:</strong> @Model.Student.Address</p>
    <p><strong>Gender:</strong> @Model.Student.Gender</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-page="/Students" class="btn btn-secondary">Cancel</a>
</form>
