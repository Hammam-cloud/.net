@page
@model MyRazorApp.Pages.Students.AddStudentModel

@{
    ViewData["Title"] = "Add Student";
    Layout = ""; // Correct syntax
}

<div class="container">
    <h2>Add New Student</h2>

    <!-- Display error message if email is already in use -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">
            @Model.ErrorMessage
        </div>
    }

    <!-- Add Student Form -->
    <form method="post">
        <div>
            <label for="FirstName">First Name:</label>
            <input type="text" id="FirstName" name="NewStudent.FirstName" required />
        </div>

        <div>
            <label for="LastName">Last Name:</label>
            <input type="text" id="LastName" name="NewStudent.LastName" required />
        </div>

        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="NewStudent.Email" required />
        </div>

        <div>
            <label for="Address">Address:</label>
            <textarea id="Address" name="NewStudent.Address" required></textarea>
        </div>

        <div>
            <label for="Gender">Gender:</label>
            <select id="Gender" name="NewStudent.Gender" required>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div>
            <input type="submit" value="Add Student" />
        </div>
    </form>
</div>

<style>
    .error-message {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        margin-top: 10px;
    }
</style>
